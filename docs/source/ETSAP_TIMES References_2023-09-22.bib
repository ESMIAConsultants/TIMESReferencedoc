journal = {Applied Energy},
keywords = {Climate mitigation,Energy systems modelling,Modal choice,Travel behaviour},
pages = {429--439},
publisher = {Elsevier Ltd},
title = {{Incorporating travel behaviour and travel time into TIMES energy system models}},
url = {http://dx.doi.org/10.1016/j.apenergy.2014.08.051},
volume = {135},
year = {2014}
}
