issn = {18790690},
journal = {Renewable and Sustainable Energy Reviews},
keywords = {Energy system planning,Integration of renewable energy sources,Power systems,Technical resolution,Temporal resolution},
number = {March},
pages = {839--856},
publisher = {Elsevier Ltd},
title = {{Integrating short term variations of the power system into integrated energy system models: A methodological review}},
url = {http://dx.doi.org/10.1016/j.rser.2017.03.090},
volume = {76},
year = {2017}
}
