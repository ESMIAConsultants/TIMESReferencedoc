journal = {Renewable and Sustainable Energy Reviews},
keywords = {Bottom-up approach,Electricity sector,Energy model,Renewable energy certificates,Renewable portfolio standard},
pages = {793--803},
publisher = {Elsevier},
title = {{Quantitatively exploring the future of renewable portfolio standard in the Korean electricity sector via a bottom-up energy model}},
