journal = {Energy Procedia},
keywords = {biofuel generation technologies,low carbon technologies},
pages = {3020--3027},
publisher = {Elsevier B.V.},
title = {{Green technologies competition and uncertainty: A Monte Carlo analysis of optimal biofuels supply choices for France}},
