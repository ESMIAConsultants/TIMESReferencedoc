journal = {Final Report},
number = {14},
pages = {145},
pmid = {18944089},
title = {{Switzerland Energy Transition Scenarios – Development and Application of the Swiss TIMES Energy System Model (STEM)}},
year = {2014}
}
@article{Kanudia2013,
