issn = {17652979},
journal = {Natures Sciences Societes},
keywords = {Climate change,Climate policies,Environment,Prospective modelling,Uncertainty management},
number = {2},
pages = {133--149},
title = {{Mod{\'{e}}lisation stochastique et robuste de l'att{\'{e}}nuation et de l'adaptation dans un syst{\`{e}}me {\'{e}}nerg{\'{e}}tique r{\'{e}}gional. Application {\`{a}} la r{\'{e}}gion Midi-Pyr{\'{e}}n{\'{e}}es}},
