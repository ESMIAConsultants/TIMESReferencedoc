journal = {Energy Economics},
keywords = {Baselines,Energy modelling,Policy},
number = {2},
pages = {153--160},
publisher = {Elsevier B.V.},
title = {{Business-as-Unusual: Existing policies in energy model baselines}},
url = {http://dx.doi.org/10.1016/j.eneco.2010.10.009},
volume = {33},
year = {2011}
}
