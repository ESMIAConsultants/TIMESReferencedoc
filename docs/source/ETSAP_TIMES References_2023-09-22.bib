issn = {03014215},
journal = {Energy Policy},
keywords = {Bioenergy,MARKAL,Sustainability},
pages = {424--436},
publisher = {Elsevier},
title = {{Implications of sustainability constraints on UK bioenergy development: Assessing optimistic and precautionary approaches with UK MARKAL}},
url = {http://dx.doi.org/10.1016/j.enpol.2012.05.015},
volume = {47},
year = {2012}
}
