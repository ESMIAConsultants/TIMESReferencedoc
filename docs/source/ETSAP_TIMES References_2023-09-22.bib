issn = {03062619},
journal = {Applied Energy},
keywords = {Climate change,Energy demand reduction,Energy systems model,Mitigation},
number = {April 2018},
pages = {351--367},
publisher = {Elsevier},
title = {{The role of advanced demand-sector technologies and energy demand reduction in achieving ambitious carbon budgets}},
url = {https://doi.org/10.1016/j.apenergy.2019.01.033},
volume = {238},
year = {2019}
}
