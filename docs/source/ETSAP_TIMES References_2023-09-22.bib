issn = {13619209},
journal = {Transportation Research Part D: Transport and Environment},
keywords = {Air quality,Automated vehicles,Automation,Emissions,Scenario analysis,Transportation},
number = {November},
pages = {132--147},
publisher = {Elsevier},
title = {{Energy and emissions implications of automated vehicles in the U.S. energy system}},
url = {https://doi.org/10.1016/j.trd.2019.09.003},
volume = {77},
year = {2019}
