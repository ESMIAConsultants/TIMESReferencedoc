doi = {10.1016/j.enpol.2023.113470},
file = {:C\:/Users/Kathleen/OneDrive - esmia.ca/F_ETSAP/Z_All references/2023/Interactions between land and grid development in the transition to a decarbonized European power system.pdf:pdf},
