@book{Sandberg2020,
abstract = {Industry is responsible for approximately 30% of the total emissions of greenhouse gases, both globally and in Sweden. Given the climate targets set out in the Paris Agreement, industry is facing a challenging future, requiring effective policies to aid the transition. Energy system optimisation models are commonly used for analysing the impact of different policies and for assessing the transition to a climate-neutral energy system. Traditionally, the primary focus of the models has been on the stationary energy sector, with little on industry. This thesis work, therefore, aims to improve energy system optimisation models as a tool for decision support and policy analysis around industry. An improved modelling structure of the industrial sector is developed and a wide range of future technology options that can support the transition to a climate-neutral sector is identified. The improved model is then applied in various scenario analyses, assessing how Swedish industry can meet net-zero carbon dioxide (CO2) emission in spite of resource limitations. The methodology applied is energy system analysis, with a focus on modelling through an iterative process of: i) model conceptualisation, ii) model computation and iii) model result interpretation. Two different models for the evaluation of Swedish industry are developed and used: a model based on ‘The Integrated MARKAL-EFOM System' – or TIMES (for cost minimisation) and a small linear optimisation model (for resource optimisation). Through the development of the model structure, it was found that three important aspects need to be represented in the model to capture the transition to a climate-neutral industrial sector: i) synergies between different types of industrial processes; ii) setup of process chains based on important tradable materials; and iii) detailed technology representation. When identifying and analysing future technologies, it was concluded that there are plenty of technology options for Swedish industry to become fossil-energy free. Technology options were identified that enable all the types industries studied (representing approximately 92% of the CO2 emissions from Swedish industry in 2015) to reach net-zero CO2 emission via either electrification (direct electrical heating or indirectly via power-to-gas technologies) or biofuels usage. Options for carbon capture and storage (CCS) were implemented for the iron and steel, chemical, cement and limestone, and aluminium industries, and for most of the industrial energy-conversion technologies. Although technology options for deep reductions in CO2 emissions exist, many of them vi require further development to enable full-scale implementation, as concluded in Paper III (appended to this thesis). The scenario analyses performed in Papers I and II give insights into key resources and technologies enabling Swedish industry to reach net-zero CO2 emission. Concerning resources, biomass is shown to be the most costeffective option for reaching ambitious climate targets; the findings in Paper II show biomass to be consistently preferred over electrified alternatives. However, the availability of biomass is limited, and increased electrification of technologies is unavoidable to achieve sustainable use of biomass (Papers I and II). Finally, there is not one key enabling technology, but rather key groups of enabling technologies that create cross-technology synergies. These provide different benefits depending on resource availability and the overall needs of the system in different scenarios.},
author = {Sandberg, Erik},
file = {:C\:/Users/Kathleen/OneDrive - esmia.ca/F_ETSAP/Z_All references/Sandberg (2020).pdf:pdf},
isbn = {9789177905080},
title = {{Capturing Swedish Industry Transition towards Carbon Neutrality in a National Energy System Model}},
url = {www.ltu.se},
year = {2020}
}
@article{Sandberg2022a,
abstract = {There is great uncertainty about what technologies will be available in time to meet Sweden's 2045 net-zero emission target for the industrial sector. This study therefore investigated how the availability of innovative technologies affects cost-effective pathways to meeting this target. The investigation employed scenario analyses using TIMES-Sweden with a new techno-economic database of industrial technologies. The scenarios varied according to how the net-zero target was defined and which technologies could be used to meet the target. Technology readiness levels (TRLs) were used to define which and when new technologies were available for investments. Based on the scenario results, a technology prioritisation pattern was identified, indicating the conditions under which technology options generated cost-efficient solutions from a systems perspective. If carbon offsetting was allowed, then carbon capture and storage (CCS) was promoted, using biofuels as a supplement. When carbon offsetting was restricted, technologies using biofuels and/or electrification options were preferred. In all scenarios, the use of heat pumps and the integration of biofuel production in the forest industry, for example, strengthened sector coupling and were favoured for the efficient use of biomass. The results also revealed that a net-zero industry with restricted use of carbon offsetting relies on technologies with a TRL of 6 (on a scale of 9) to become available; in such cases, hydrogen electrolysis and black liquor gasification were key. When carbon offsetting was unrestricted, CCS technologies combined with low-cost negative emissions provided the most cost-efficient solution, but it led to fossil fuel lock-in. For Sweden, the local availability of biomass provides a competitive advantage when the use and production of biofuels both reduces the need for using more costly power-to-fuel solutions in industry and makes available low-cost negative emissions.},
author = {Sandberg, Erik and Krook-Riekkola, Anna},
doi = {10.1016/j.jclepro.2022.132594},
file = {:C\:/Users/Kathleen/OneDrive - esmia.ca/F_ETSAP/Z_All references/1-s2.0-S095965262202193X-main.pdf:pdf},
issn = {09596526},
journal = {Journal of Cleaner Production},
keywords = {Decarbonisation,Energy system optimisation models (ESOM),Industry,Net-zero pathways,TIMES-Sweden,TRL},
number = {November 2021},
pages = {132594},
publisher = {Elsevier Ltd},
title = {{The impact of technology availability on the transition to net-zero industry in Sweden}},
url = {https://doi.org/10.1016/j.jclepro.2022.132594},
volume = {363},
year = {2022}
}
@article{Sandvall2017,
abstract = {There is now a strong demand in Sweden for construction of new low energy buildings (LEB) areas. There are essentially three options for heat supply to these LEB areas: “individual” “on-site” and “large heat network” supply. The chosen option is of strategic societal interest. Thus, this study aims at comparing the long-term system cost of the three heat supply options. A dynamic modelling approach is applied in a systematic analysis designed to investigate the threshold for the various options' cost-efficiency. The study addresses scale impacts of hypothetical LEB areas and district heating systems. The results show that, generally, the large heat network option has the lowest system cost whereas in most cases the individual option has the highest system cost.},
