pages = {288--300},
publisher = {Elsevier Ltd},
title = {{Assessing GHG mitigation and associated cost of French biofuel sector: Insights from a TIMES model}},
url = {http://dx.doi.org/10.1016/j.energy.2016.06.146},
volume = {113},
year = {2016}
}
@article{Hugues2017,
