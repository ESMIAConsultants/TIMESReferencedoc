journal = {Renewable and Sustainable Energy Reviews},
keywords = {Greenhouse gas,Low carbon development,Mitigation strategy},
pages = {178--191},
publisher = {Elsevier},
title = {{Taiwan's 2050 low carbon development roadmap: An evaluation with the MARKAL model}},
url = {http://dx.doi.org/10.1016/j.rser.2015.04.153},
volume = {49},
year = {2015}
}
@article{Tsai2013,
abstract = {The post-Kyoto negotiations under the United Nations Framework Convention on Climate Change (UNFCCC) have produced significant results such as the Bali Roadmap, Copenhagen Accord and Cancun Agreement, and clarified parties' plans for long-term emissions mitigation. This paper presents the results on the simulations of different technology development scenarios under the same emission reduction goal, utilizing the MARKAL model to evaluate emissions reduction on Taiwan's electricity, industry, buildings, and transportation sectors. The empirical results show that Taiwan can potentially reduce 56%-60% of greenhouse gas emissions relative to the BAU scenario in 2025, and 15% relative to the 2005 levels. These projected results are higher than the Kyoto targets of Annex I countries and also higher than those projected in the (IEA, 2011 [17]) and (EIA, 2011 [5]) scenarios. The accumulated incremental cost will be an increase by 1.2%-1.96% of Taiwan's GDP. As Taiwan heavily relies on imported energy from foreign sources and has very limited natural endowments of renewable energy, it is very difficult for Taiwan to reach this reduction goal alone through adopting emission reduction technology, or applying economic incentive mechanism. Allowing Taiwan to participate in the international flexible mechanisms will be a necessary measure for Taiwan to achieve its emission reduction goal; in addition, such participation will also benefit the international community's GHG reduction efforts tremendously. {\textcopyright} 2012 Elsevier Ltd.},
