number = {December 2021},
pages = {100024},
publisher = {Elsevier Ltd},
title = {{Low energy demand scenario for feasible deep decarbonisation: Whole energy systems modelling for Ireland}},
url = {https://doi.org/10.1016/j.rset.2022.100024},
volume = {2},
year = {2022}
}
@article{Gerbelova2014,
