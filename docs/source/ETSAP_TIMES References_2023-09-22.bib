keywords = {CO2 mitigation,Energy systems,MARKAL,Nepal,Thailand,carbon tax},
pages = {835--840},
publisher = {Elsevier B.V.},
title = {{Impact of Carbon Tax in the Energy System Development of Nepal and Thailand}},
