issn = {03062619},
journal = {Applied Energy},
keywords = {Energy system models,Operating reserve,Power system models},
pages = {600--615},
publisher = {Elsevier Ltd},
title = {{Incorporating flexibility requirements into long-term energy system models - A case study on high levels of renewable electricity penetration in Ireland}},
url = {http://dx.doi.org/10.1016/j.apenergy.2014.08.072},
volume = {135},
year = {2014}
}
