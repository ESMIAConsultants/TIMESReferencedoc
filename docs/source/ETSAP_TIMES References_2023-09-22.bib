doi = {10.1016/S0377-2217(03)00350-3},
file = {:C\:/Users/Kathleen/OneDrive - esmia.ca/F_ETSAP/Z_All references/Emissions-trading-and-technology-deployment-in-an-e_2004_European-Journal-of.pdf:pdf},
issn = {03772217},
journal = {European Journal of Operational Research},
keywords = {Emissions trading,Energy systems,Environment,Spillovers,Technology learning},
number = {1},
pages = {243--261},
title = {{Emissions trading and technology deployment in an energy-systems "bottom-up" model with technology learning}},
volume = {158},
year = {2004}
}
