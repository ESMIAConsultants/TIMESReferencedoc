keywords = {Fuel cells,Heat pumps,Microturbines,Solar energy technologies,Stirling engines},
pages = {92--103},
publisher = {Elsevier Ltd},
title = {{Modelling the Italian household sector at the municipal scale: Micro-CHP, renewables and energy efficiency}},
url = {http://dx.doi.org/10.1016/j.energy.2014.02.055},
