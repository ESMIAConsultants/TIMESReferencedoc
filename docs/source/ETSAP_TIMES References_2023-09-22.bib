issn = {03043894},
journal = {Journal of Hazardous Materials},
keywords = {CO2 emission reduction,CO2 hedging analyses,Decision analysis methods},
number = {1-3},
pages = {217--227},
title = {{Incorporating the long term risk for deep emission reduction in near term CO2 mitigation strategies}},
volume = {61},
year = {1998}
}
